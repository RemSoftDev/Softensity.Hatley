@model Softensity.Hatley.Web.Models.ForgotModel

@{
    ViewBag.Title = "Forgot password";
}

<div class="col-md-4 col-md-offset-4">
    <div class="">
        <h2>Recover password</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal well light-background">
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.Email, new { @class = "col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @autofocus = "" })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-7">
                        <input type="submit" value="Recover" class="btn btn-large btn-primary pull-right" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
