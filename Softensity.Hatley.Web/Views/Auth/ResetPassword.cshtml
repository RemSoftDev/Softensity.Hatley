@model Softensity.Hatley.Web.Models.ResetPasswordModel

@{
    ViewBag.Title = "Reset password";
}

<div class="col-md-4 col-md-offset-4">
    <div class="">
        <h2>Recover password</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal well light-background">
                @Html.ValidationSummary(true)
                
                <div class="form-group">
                    @Html.LabelFor(model => model.Password, new { @class = "col-md-3" })
                    <div class="col-md-9">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "" })
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ConfirmPassword, new { @class = "col-md-3" })
                    <div class="col-md-9">
                        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", @placeholder = "" })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-7">
                        <input type="submit" value="Recover" class="btn btn-large btn-primary pull-right" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
