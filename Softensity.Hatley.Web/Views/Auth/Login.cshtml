@model Softensity.Hatley.Web.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

@section styles
{
    
}


<div id="login" class="col-md-4 col-md-offset-4">
    <div class="">
        <h2>Login</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal well light-background">
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.Email, new { @class = "col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @autofocus = "" })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password, new { @class = "col-md-3" })
                    <div class="col-md-9">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "" })
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-8">
                        @Html.CheckBoxFor(model => model.RememberMe) @Html.LabelFor(model => model.RememberMe, new { @class = "" })
                    </div>
                    <div class="col-md-4">
                        <input type="submit" value="Sign In" class="btn btn-large btn-primary pull-right" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-6">
                        New to site? <span class="">@Html.ActionLink("Sign Up", "Registration", "Auth")</span>
                    </div>
                    <div class="col-md-6">
                        <span class="btn-link pull-right">@Html.ActionLink("Forgot Password?", "ForgotPassword", "Auth")</span>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
