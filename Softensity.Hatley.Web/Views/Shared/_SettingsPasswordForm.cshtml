
@model Softensity.Hatley.Web.Models.PasswordModel


@Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true)

    <div class="form-group">
            @Html.LabelFor(model => model.OldPassword, new { @class = "col-md-5" })
            <div class="col-md-7">
                @Html.PasswordFor(model => model.OldPassword, new { @class = "form-control", @placeholder = "" })
                @Html.ValidationMessageFor(model => model.OldPassword)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NewPassword, new { @class = "col-md-5" })
            <div class="col-md-7">
                @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control", @placeholder = "" })
                @Html.ValidationMessageFor(model => model.NewPassword)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ConfirmPassword, new { @class = "col-md-5" })
            <div class="col-md-7">
                @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", @placeholder = "" })
                @Html.ValidationMessageFor(model => model.ConfirmPassword)
            </div>
        </div>

    <div class="form-group">
        <div class="col-md-offset-10 col-md-2">
            <input type="submit" value="Change password" class="btn btn-primary pull-right" />
        </div>
    </div>
    @if (Model.Done)
    {
        <div class="alert alert-success" role="alert">Password successfully changed</div>
    }
</div>